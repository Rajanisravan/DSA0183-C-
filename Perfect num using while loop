#include <iostream>
int main() {
    int num, sum = 0, i = 1;
    std::cout << "Enter a positive integer: ";
    std::cin >> num;
    while (i < num) {
        if (num % i == 0) {
            sum += i;
        }
        i++;
    }
    if (sum == num) {
        std::cout << num << " is a perfect number." << std::endl;
    } else {
        std::cout << num << " is not a perfect number." << std::endl;
    }

    return 0;
}
