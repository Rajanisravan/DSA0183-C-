#include<iostream>
using namespace std;
int add(int a, int b) {
    return a + b;
}
int add(int a, int b, int c) {
    return a + b + c;
}
int main() {
    int a, b, c;
    
    cout << "Enter the value for a, b, c: ";
    cin >> a >> b >> c;
    int resultTwo = add(a, b);
    cout << "The value of addition using two parameters is " << resultTwo << endl;
    int resultThree = add(a, b, c);
    cout << "The value of addition using three parameters is " << resultThree << endl;
    return 0;
}
