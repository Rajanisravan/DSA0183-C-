#include<iostream>
int main(){
	int number,sum=0,i;
	std::cout<<"enter the number";
	std::cin>>number;
	for(i=1;i<=number/2;i++){
		if(number%i==0){
			sum=sum+i;
		}
	}
	if(sum==number){
		std::cout<<number<<"is perfect number"<<std::endl;
	}
	else{
		std::cout<<number<<"is not perfect number"<<std::endl;
	}
	return 0;
}
